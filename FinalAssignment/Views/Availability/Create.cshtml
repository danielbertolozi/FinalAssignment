@model FinalAssignment.ViewModels.CreateAvailabilityViewModel

<h2>Create new Availability Event</h2>
<span 
	asp-for="ViewBag.Error"
    class="text-danger"></span>
<form 
	asp-controller="Availability"
    asp-action="Create"
    method="post">
    <div class="form-group">
        <label 
			asp-for="DayOfWeek"
            class="control-label">
		</label>
        <div 
			class="dropdown">
            @Html.DropDownListFor(model => model.DayOfWeek, ViewBag.DaysOfWeek as List<SelectListItem>, new { @class = "dropdown" })
        </div>
    </div>
    <div 
		class="form-group">
        <label 
			asp-for="StartTime"
            class="control-label">
		</label>
        <input 
			asp-for="StartTime"
            class="form-control" />
        <span
			asp-validation-for="StartTime"
            class="text-danger"></span>
    </div>
    <div 
		class="form-group">
        <label 
			asp-for="EndTime"
            class="control-label">
		</label>
        <input 
			asp-for="EndTime"
            class="form-control" />
        <span 
			asp-validation-for="EndTime"
            class="text-danger"></span>
    </div>
	<div 
		class="form-group">
        <div 
			class="col-md-12">
			<label 
	            asp-for="IsAllDay"
	            class="control-label">
            </label>
            <p>@Html.CheckBoxFor(m => m.IsAllDay, new { @checked = "checked"})</p>
        </div>
    </div>
	<p></p>
	<div
        class="form-group"
		style="margin-top: 7%">
        <input 
		    type="submit" 
		    class="btn btn-primary" 
		    value="Create" />
    </div>
</form>