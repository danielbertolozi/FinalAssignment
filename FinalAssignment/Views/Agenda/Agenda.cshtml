﻿@model FinalAssignment.ViewModels.AgendaViewModel
<div
    id="calendarList">
	<table
		class="table table-striped table-bordered">
		<thead>
            <tr>
                <th>Event Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>Duration</th>
                <th>Medic</th>
                <th>Patient</th>
            </tr>
        </thead>
		<tbody>
		@{foreach (var Event in Model.ConsultsList) 
		{
			<tr>
                <td>
					<p>@Event.Title</p>
				</td>
				<td>
                    <p>@Event.Description</p>
				</td>
				<td>
                    <p>@Event.Date</p>
                </td>
				<td>
                    <p>@Event.Duration</p>
                </td>
				<td>
                    <p>@Event.Medic.Name</p>
                </td>
				<td>
                    <p>@Event.Patient.Name</p>
                </td>
		    </tr>
		}}
	    </tbody>
	</table>
</div>
<div>
    <a asp-area="" asp-controller="Agenda" asp-action="Create">
	    <button
            class="btn btn-default">New
		</button>
	</a>
</div>