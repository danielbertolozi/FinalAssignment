@Model FinalAssignment.ViewModels.AgendaViewModel

<div 
	class="calendar"
	style="margin-top: 3%">
	<table 
		class="table table-striped table-bordered">
		<thead>
            <tr>
			    <th>Sun</th>
				<th>Mon</th>
				<th>Tue</th>
				<th>Wed</th>
				<th>Thu</th>
				<th>Fri</th>
				<th>Sat</th>
			</tr>
		</thead>
		<tbody>
        @{for (int i = 0; i <= 7; i++) {
            <tr>
            @for (int j = 0; j <= 6; j++) {
                <td></td>
			}
            </tr>
		}}
		</tbody>
	</table>
</div>

<div
    id="calendarList">
	<table
		class="table table-striped table-bordered">
		<thead>
            <tr>
                <th>Event Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>Duration</th>
                <th>Medic</th>
                <th>Patient</th>
            </tr>
        </thead>
		<tbody>
		@{for (var Event in Model.CalendarEventList) 
		{
			<tr>
                <td>
					<p>Event.Title</p>
				</td>
				<td>
                    <p>Event.Description</p>
				</td>
				<td>
                    <p>Event.Date</p>
                </td>
				<td>
                    <p>Event.Duration</p>
                </td>
				<td>
                    <p>Event.Medic.Name</p>
                </td>
				<td>
                    <p>Event.Patient.Name</p>
                </td>
		    </tr>
		}}
	    </tbody>
	</table>
</div>