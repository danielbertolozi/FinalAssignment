@model FinalAssignment.ViewModels.CreateViewModel

<script type="text/javascript">
    $(function () {
       $('.datepicker').datepicker();
    });
</script>

<h2>Create new Account</h2>
<span
	asp-for="ViewBag.Error"
    class="text-danger"></span>
<form
	asp-controller="Account"
	asp-action="Create"
	method="post">
    <div
	    class="form-group">
	    <label
		    asp-for="Name"
			class="control-label">
		</label>
		<input
			asp-for="Name"
		    class="form-control"/>
		<span asp-validation-for="Name"
	        class="text-danger"></span>
	</div>
	<div
        class="form-group">
		 <label
            asp-for="Genre"
            class="control-label">
        </label>
		<div
			class="dropdown">
        @Html.DropDownListFor(model => model.Genre, ViewBag.Genres as List<SelectListItem>, new { @class = "dropdown" })
		</div>
    </div>
	<div
        class="form-group">
        <label
            asp-for="BirthDate"
			class="control-label">
        </label>
		<div
			class="datepicker">
			@Html.EditorFor(model => model.BirthDate, new { @class = "form-control datepicker" })
		</div>
        <span asp-validation-for="BirthDate"
            class="text-danger"></span>
    </div>
	<div
        class="form-group">
        <label
            asp-for="Email"
			class="control-label">
        </label>
        <input
            asp-for="Email"
		    class="form-control"/>
        <span asp-validation-for="Email"
            class="text-danger"></span>
    </div>
	<div
        class="form-group">
        <label
            asp-for="Phone"
			class="control-label">
        </label>
        <input
            asp-for="Phone"
		    class="form-control"/>
        <span asp-validation-for="Phone"
            class="text-danger"></span>
    </div>
	<div
        class="form-group">
        <label
            asp-for="Address"
			class="control-label">
        </label>
        <input
            asp-for="Address"
		    class="form-control"/>
        <span asp-validation-for="Address"
            class="text-danger"></span>
    </div>
	<div
        class="form-group">
        <label
            asp-for="Password"
			class="control-label">
        </label>
        <input
            asp-for="Password"
		    class="form-control"/>
        <span asp-validation-for="Password"
            class="text-danger"></span>
    </div>
	<div
	    class="form-group">
		<label
			asp-for="AccountType"
			class="control-label">
		</label>
		<div
            class="dropdown">
        @Html.DropDownListFor(model => model.AccountType, ViewBag.AccountTypes as List<SelectListItem>, new { @class = "dropdown" })
		</div>
		<span 
			asp-validation-for="AccountType"
			class="text-danger"></span>
	</div>
	<div
		class="form-group">
	    <input type="submit" class="btn btn-primary" value="Create" />
	</div>
</form>